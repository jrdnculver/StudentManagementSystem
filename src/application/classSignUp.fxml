<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.Controller_classSignUp">
   <center>
      <AnchorPane prefHeight="350.0" prefWidth="500.0" BorderPane.alignment="CENTER">
         <children>
            <Label alignment="CENTER" layoutX="34.0" layoutY="14.0" prefHeight="35.0" prefWidth="432.0" text="Class Sign Up">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
            </Label>
            <ComboBox fx:id="classSubject" layoutX="221.0" layoutY="62.0" prefHeight="25.0" prefWidth="201.0" />
            <Label alignment="CENTER_RIGHT" layoutX="20.0" layoutY="59.0" prefHeight="30.0" prefWidth="182.0" text="Class Subject:">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Label>
            <ComboBox fx:id="className" layoutX="221.0" layoutY="100.0" onAction="#handleSubjectSelection" onMouseReleased="#handleSubjectSelection" prefHeight="25.0" prefWidth="201.0" />
            <Label alignment="CENTER_RIGHT" layoutX="20.0" layoutY="97.0" prefHeight="30.0" prefWidth="182.0" text="Class Name:">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Label>
            <ComboBox fx:id="classNumber" layoutX="221.0" layoutY="143.0" onAction="#handleNameSelection" onMouseReleased="#handleNameSelection" prefHeight="25.0" prefWidth="201.0" />
            <Label alignment="CENTER_RIGHT" layoutX="20.0" layoutY="140.0" prefHeight="30.0" prefWidth="182.0" text="Class Number:">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Label>
            <Button layoutX="98.0" layoutY="272.0" mnemonicParsing="false" onAction="#returnHome" prefHeight="47.0" prefWidth="137.0" text="Cancel">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Button>
            <Button layoutX="289.0" layoutY="272.0" mnemonicParsing="false" onAction="#addClassSelection" prefHeight="47.0" prefWidth="137.0" text="Add">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Button>
            <Label fx:id="displayStatus" alignment="CENTER" layoutX="20.0" layoutY="226.0" prefHeight="28.0" prefWidth="462.0" text="Choose Subject, Name, and Number of your Class">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <ComboBox fx:id="classTeacher" layoutX="221.0" layoutY="186.0" onAction="#handleNumberSelection" onMouseReleased="#handleNumberSelection" prefHeight="25.0" prefWidth="201.0" />
            <Label alignment="CENTER_RIGHT" layoutX="20.0" layoutY="183.0" prefHeight="30.0" prefWidth="182.0" text="Class Teacher:">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Label>
         </children>
      </AnchorPane>
   </center>
</BorderPane>
